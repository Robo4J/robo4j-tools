<robo4j>
    <roboUnit id="httpServer">
        <class>com.robo4j.socket.http.units.HttpServerUnit</class>
        <config name="com.robo4j.core.root">
            <value name="port" type="int">8027</value>
            <value name="target" type="String">imageController</value>
            <value name="packages" type="String">com.robo4j.socket.http.codec</value>
            <value name="targetUnits" type="String">{"imageController":"POST"}</value>
            <value name="stopper" type="int">-1</value>
        </config>
    </roboUnit>

    <roboUnit id="imageController">
        <class>com.robo4j.tools.camera.controller.ImageController</class>
        <config name="com.robo4j.core.root">
            <value name="target" type="String">imageProcessor</value>
        </config>
    </roboUnit>

    <roboUnit id="imageProcessor">
        <class>com.robo4j.tools.camera.processor.ImageProcessor</class>
        <config name="com.robo4j.core.root">
            <value name="output" type="String">camera_filed</value>
        </config>
    </roboUnit>
</robo4j>